#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int roll_dice() {
    return rand() % 6 + 1;
}

int main() {
    srand(time(0));

    printf("Rolling dice...\n");

    int die1 = roll_dice();
    int die2 = roll_dice();
    int total = die1 + die2;

    printf("Die 1: %d\n", die1);
    printf("Die 2: %d\n", die2);
    printf("Total value: %d\n", total);

    if (total > 7) {
        printf("You won!\n");
    } else {
        printf("You lost!\n");
    }

    return 0;
}
